#home
  min-height 100%
  background url(../assets/images/bg.gif) repeat

  .home-sidebar-left
    position fixed
    top 200px
    bottom 0
    left 0
    padding-top 10px

  [ui-view='home.frame']
    margin-top 64px
    margin-left 150px

#console
  .amaoto-v2-player
    z-index 20
    .cover
      height 140px
      width 140px
      border-radius 0
    .player
      left 140px

  .console-sidebar-left
    position fixed
    top 140px
    bottom 0
    left 0
    width 138px
    padding-top 10px
    background rgba(240 240 240 0.8)
    box-shadow 0 0 10px rgba(0 0 0 0.5)
    z-index 10

  [ui-view='console.frame']
    margin-top 64px
    margin-left 150px

  table
    .music
      .title
        color #8c0000
      .artist
        color #007ea8

md-grid-list
  md-grid-tile
    background rgba(250 250 250 1)
    box-shadow 1px 1px 10px rgba(0 0 0 0.3)
    .cover
      background-size cover
      background-position center
    md-grid-tile-header
      & > figcaption
        width 100%
      text-shadow 0 0 3px rgba(255 255 255 .5)
      background rgba(0 0 0 .5)
    .meta
      .title
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        font-size 1em
        color #fcff9b
        padding 3px 6px 0
      .artist
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        font-size 0.8em
        padding 3px 6px 0
    .active-mask
      background rgba(0 0 0 .3)
      position absolute
      top 0
      bottom 0
      left 0
      right 0
    .music
      .cover
        height 100%
        width auto
      .meta
        position relative
        .title
          color #336

  md-grid-tile-footer
    text-align center
    background rgba(0 0 0 0.5)

