@font-face
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: url(../../bower_components/material-design-iconfont/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
  src: local('Material Icons'),
          local('MaterialIcons-Regular'),
          url(../../bower_components/material-design-iconfont/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
          url(../../bower_components/material-design-iconfont/iconfont/MaterialIcons-Regular.woff) format('woff'),
          url(../../bower_components/material-design-iconfont/iconfont/MaterialIcons-Regular.ttf) format('truetype');

.material-icons
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px; /* Preferred icon size */
  display: inline-block;
  width: 1em;
  height: 1em;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';

html
  font-family "Microsoft YaHei UI", "Helvetica Neue", Helvetica, Arial, sans-serif

[layout=row]
  flex-direction row

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

md-toolbar
  &.md-default-theme
    background-color black

section
  &.jumbotron
    margin-bottom 30px
    padding 1px 30px
    background-color #5aadbb
    text-align center
    color white
    h1
      font-size 3em

.techs
  display flex
  flex-flow row wrap
  md-card
    width 30%
    img
      &.pull-right
        float right
        width 100px

.file-list
  position relative
  margin 5px 0
  .file-name
    color darkred
    padding 0 5px
  .file-size
    color orangered
    padding 0 5px
  .file-type
    color green
    padding 0 5px
  .file-upload-progress
    position absolute
    bottom 0
    left 0
    right 0
    overflow hidden
    border-radius 0 0 2px 2px
  .music-title
    color darkred
    padding 0 5px
  .music-artist
    color #007ea8
    padding 0 5px
  .music-bitrate
    color #430b52
    padding-left 5px
  .music-playtime
    color #a7a641
  .image-thumb
    height 55px
    width auto

.amaoto-v2-player
  position fixed
  top 0
  left 0
  right 0
  .cover
    position absolute
    top 0
    left 0
    height 100px
    width 100px
    border-radius 0 0 5px 0
    box-shadow 0 0 15px rgba(0 0 0 0.5)
    overflow hidden
    z-index 10
    img
      height 100%
      width 100%
  .player
    $height = 50px
    position absolute
    top 0
    left 100px
    right 0
    height $height
    background rgba(240 240 240 0.8)
    box-shadow 0 0 15px rgba(0 0 0 0.5)
    .meta
      height $height
      line-height $height
      padding 0 ($height / 3)
      .title
        font-size 1.4em
        color #8c0000
        text-shadow 0 0 3px rgba(255 255 255 0.8)
      .artist
        font-size 0.8em
        color #4c4c4c
        text-shadow 0 0 3px rgba(255 255 255 0.8)
      .progress
        position absolute
        bottom 0
        left 0
        right 0
        opacity 1
        transition opacity 0.3s
      .progress-setter
        opacity 0
        transition opacity 0.3s
        position absolute
        bottom 0 - 23px
        left 0
        right 0
        margin 0
      &:hover
        .progress
          opacity 0
        .progress-setter
          opacity 1
    .controller
      background rgba(255 255 255 .7)
      box-shadow 2px 2px 15px rgba(0 0 0 .3)
      overflow hidden
      .playlist
        min-height 400px
        margin 30px
    //  transition opacity 0.3s
    //  opacity 0
    //&:hover
    //  .controller
    //    opacity 1

#home
  background-image url(../assets/images/bg.gif)
  .amaoto-v2-player
    z-index 20
    .cover
      height 140px
      width 140px
      border-radius 0
    .player
      left 140px

  .home-sidebar-left
    position fixed
    top 140px
    bottom 0
    left 0
    width 138px
    padding-top 10px
    background rgba(240 240 240 0.8)
    box-shadow 0 0 10px rgba(0 0 0 0.5)
    z-index 20

  [ui-view='home.frame']
    margin-top 64px
    margin-left 150px

#console
  .amaoto-v2-player
    z-index 20
    .cover
      height 140px
      width 140px
      border-radius 0
    .player
      left 140px

  .console-sidebar-left
    position fixed
    top 140px
    bottom 0
    left 0
    width 138px
    padding-top 10px
    background rgba(240 240 240 0.8)
    box-shadow 0 0 10px rgba(0 0 0 0.5)
    z-index 10

  [ui-view='console.frame']
    margin-top 64px
    margin-left 150px

  table
    .music
      .title
        color #8c0000
      .artist
        color #007ea8

md-grid-tile.album
  box-shadow 0 0 3px rgba(0 0 0 0.3)
  md-grid-tile-footer
    text-align center
    background rgba(0 0 0 0.5)

md-grid-list
  &.music, &.album
    md-grid-tile
      box-shadow 0 0 3px rgba(0 0 0 0.5)
      background-size cover
      background-position center
      md-grid-tile-header
        & > figcaption
          width 100%
        text-shadow 0 0 3px rgba(255 255 255 .5)
        background rgba(0 0 0 .5)
      .meta
        overflow hidden
        margin .5em
        & > *
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
        .title
          font-size 1em
          color #fcff9b
        .artist
          font-size 0.8em
      .active-mask
        background rgba(0 0 0 .3)
        position absolute
        top 0
        bottom 0
        left 0
        right 0


