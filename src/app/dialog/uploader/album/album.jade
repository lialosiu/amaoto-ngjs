md-dialog(aria-label='File Uploader Dialog', flex)
    form(name='vm.createAlbumForm', ng-submit='vm.submit()')
        md-toolbar.md-toolbar-tools
            h2 上传新专辑
            span(flex)
            md-button.md-icon-button(type='button', ng-click='vm.cancel()')
                md-icon close
        md-dialog-content.md-dialog-content(layout='column')
            div(layout-gt-md='row')
                div(layout-padding, style='width: 130px')
                    img.md-whiteframe-2dp(ng-src='{{ vm.form.cover_thumbnail }}', layout-fill)
                div(layout='column', flex)
                    div(layout-gt-md='row')
                        md-input-container(flex)
                            label 专辑名
                            input(name='title', ng-model='vm.form.title', type='text', required)
                            div(ng-messages="vm.createAlbumForm.title.$error")
                                div(ng-message="required") 必填
                        md-input-container(flex)
                            label 艺术家
                            input(name='artist', ng-model='vm.form.artist', type='text')
                    div(layout-gt-md='row')
                        md-input-container(flex)
                            label 年份
                            input(name='year', ng-model='vm.form.year', type='text')
                        md-input-container(flex)
                            label 流派
                            input(name='genre', ng-model='vm.form.genre', type='text')
            div
                md-list
                    md-list-item(ng-repeat='file in vm.files', ng-switch='file.status')
                        md-card.file-list(layout='column', layout-padding, layout-fill, ng-switch-when='added')
                            div(layout='row', layout-align='space-between', layout-fill)
                                div.file-name(flex) {{ file.name }}
                                div.file-size
                                    small {{ file.size }}
                            div(layout='row')
                                div.file-type(flex)
                                    small {{ file.mime }}
                                div.file-status
                                    small 待上传
                        md-card.file-list(layout='column', layout-padding, layout-fill, ng-switch-when='uploading')
                            div(layout='row', layout-align='space-between', layout-fill)
                                div.file-name(flex) {{ file.name }}
                                div.file-size
                                    small {{ file.size }}
                            div(layout='row')
                                div.file-type(flex)
                                    small {{ file.mime }}
                                div.file-status
                                    small 正在上传
                            md-progress-linear.file-upload-progress(md-mode='determinate', value='{{ file.uploadProgress }}')
                        md-card.file-list(layout='row', layout-padding, layout-fill, ng-switch-when='uploaded.music')
                            img.image-thumb(ng-src='{{ file.uploaded.show_thumbnail_cover_url }}')
                            div(layout='column', flex)
                                div(layout='row', layout-fill)
                                    div.music-title {{ file.uploaded.title }}
                                    div.music-artist
                                        small {{ file.uploaded.artist }}
                                    div(flex)
                                    div.music-playtime
                                        small {{ file.uploaded.playtime }}
                                div(layout='row')
                                    div.file-type
                                        small {{ file.uploaded.file.mime }}
                                    div.music-bitrate
                                        small {{ file.uploaded.bitrate_4_display }}
                                    div(flex)
                                    div.file-status
                                        small 上传完成
                        md-card.file-list(layout='row', layout-padding, layout-fill, ng-switch-when='uploaded.image')
                            img.image-thumb(ng-src='{{ file.uploaded.show_thumbnail_url }}')
                            div(layout='column', flex)
                                div(layout='row', layout-fill)
                                    div.file-name {{ file.uploaded.file.name }}
                                    div.image-w-h
                                        small {{ file.uploaded.width }}x{{ file.uploaded.height }}
                                    div(flex)
                                    div.file-size
                                        small {{ file.size }}
                                div(layout='row')
                                    div.file-type
                                        small {{ file.uploaded.file.mime }}
                                    div(flex)
                                    div.file-status
                                        small 上传完成
                        md-card.file-list(layout='column', layout-padding, layout-fill, ng-switch-when='uploaded.file')
                            div(layout='row', layout-align='space-between', layout-fill)
                                div.file-name(flex) {{ file.uploaded.name }}
                                div.file-size
                                    small {{ file.uploaded.size }}
                            div(layout='row')
                                div.file-type(flex)
                                    small {{ file.uploaded.mime }}
                                div.file-status
                                    small 上传完成
        md-dialog-actions.md-actions(layout='row')
            md-button.md-raised(ngf-select, ng-model='vm.addedFiles', ngf-change='vm.added()', ngf-multiple='true', ngf-max-size='20MB', ngf-pattern='audio/*,image/*', )
                | 选择文件
            md-button.md-raised.md-warn(flex = 1, ng-click='vm.upload()')
                | 开始上传
            md-button.md-raised.md-primary
                | 确定