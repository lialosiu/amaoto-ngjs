md-table-toolbar
    .md-title 用户列表
md-table-container
    table(md-table, md-progress='list.table.promise')
        thead(md-head)
            tr(md-row)
                th(md-column) ID
                th(md-column) 用户名
                th(md-column) Email
                th(md-column) 创建时间
        tbody(md-body)
            tr(md-row, ng-repeat='user in list.table.data')
                td(md-cell) {{ user.id }}
                td(md-cell) {{ user.username }}
                td(md-cell) {{ user.email }}
                td(md-cell) {{ user.created_at }}
md-table-pagination(md-page-select, md-boundary-links, md-label='{page: "页码", rowsPerPage: "每页行数", of: "共"}', md-page='list.table.currentPage', md-limit='list.table.perPage', md-total='{{ list.table.total }}', md-on-paginate='list.onPaginationChange')
