div
    md-list
        md-list-item.md-1-line
            span(flex='10') ID
            span(flex='20') 预览图
            span(flex='10') 宽
            span(flex='10') 高
            span(flex='20') 创建时间
        md-divider
        md-list-item.md-1-line(ng-repeat='image in vm.list')
            span(flex='10') {{ image.id }}
            div(flex='20')
                div(style='height: 4em; margin: 0.5em 2em 0.5em 0; overflow: hidden;')
                    img(ng-src='{{ image.show_thumbnail_url }}', width='100', ng-click='vm.showPreviewImageDialog($event, image.show_high_resolution_url)')
            span(flex='10') {{ image.width }}
            span(flex='10') {{ image.height }}
            span(flex='20') {{ image.created_at }}

div
    md-button(ng-click='vm.prevPage()') prev
    md-button(ng-click='vm.nextPage()') next
    md-button(ng-click='vm.showUploadDialog($event)') 上传文件
