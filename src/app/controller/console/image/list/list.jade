md-table-toolbar
    .md-title 图片列表
        md-button(ng-click='list.showUploadDialog($event)') 上传图片
md-table-container
    table(md-table, md-progress='list.table.promise')
        thead(md-head)
            tr(md-row)
                th(md-column) ID
                th(md-column) 预览图
                th(md-column) 宽
                th(md-column) 高
                th(md-column) 创建时间
        tbody(md-body)
            tr(md-row, ng-repeat='image in list.table.data')
                td(md-cell) {{ image.id }}
                td(md-cell)
                    div(style='height: 4em; margin: 0.5em 2em 0.5em 0; overflow: hidden;')
                        img(ng-src='{{ image.show_thumbnail_url }}', width='100', ng-click='list.showPreviewImageDialog($event, image.show_high_resolution_url)')
                td(md-cell) {{ image.width }}
                td(md-cell) {{ image.height }}
                td(md-cell) {{ image.created_at }}
md-table-pagination(md-page-select, md-boundary-links, md-label='{page: "页码", rowsPerPage: "每页行数", of: "共"}', md-page='list.table.currentPage', md-limit='list.table.perPage', md-total='{{ list.table.total }}', md-on-paginate='list.onPaginationChange')
