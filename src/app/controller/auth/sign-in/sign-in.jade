div(layout='row', layout-fill, layout-align="center center", ng-cloak)
    div(flex="20")
    md-content.md-whiteframe-5dp(flex)
        md-toolbar.md-primary
            .md-toolbar-tools
                h2.md-flex 登录
        div(layout-padding)
            md-input-container
                label 用户名
                input(ng-model='vm.user.username', type='text')
            md-input-container
                label 密码
                input(ng-model='vm.user.password', type='password')
            div(layout='row', layout-align='end center')
                md-button.md-raised 注册
                md-button.md-raised.md-primary(ng-click='vm.signIn()') 登录
    div(flex="20")