div homepage
md-grid-list(md-cols-sm='1', md-cols-md='2', md-cols-gt-md='6', md-row-height-gt-md="1:1", md-row-height="4:3", md-gutter="8px", md-gutter-gt-sm="4px")
    md-grid-tile(ng-repeat='album in homepage.albums', style='background: url({{ album.show_thumbnail_cover_url }}); background-size: cover;')
        md-grid-tile-footer
            span {{ album.title }}

md-grid-list(md-cols-sm='1', md-cols-md='2', md-cols-gt-md='6', md-row-height-gt-md="1:1", md-row-height="4:3", md-gutter="8px", md-gutter-gt-sm="4px")
    md-grid-tile(ng-repeat='music in homepage.musics', md-colspan-sm="1", style='background: url({{ music.show_thumbnail_cover_url }}); background-size: cover;')
        md-grid-tile-footer
            span {{ music.title }}